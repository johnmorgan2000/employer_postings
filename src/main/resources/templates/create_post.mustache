                            <input type="text" name="position" required />
                        </div>

                        <div class="row">
                            <label class="col-2" for="description">Description: </label>
                            <textarea
                                name="description"
                                id=""
                                cols="30"
                                rows="1"
                                required
                            ></textarea>
                        </div>

                        <div class="row">
                            <label class="col-2" for="benefits">Benefits: </label>
                            <input type="text" name="benefits" required />
                        </div>

                        <div class="row">
                            <label class="col-2" for="applyUrl">Url: </label>
                            <input type="text" name="applyUrl" required />
                        </div>

                        <div class="row">
                            <label class="col-2" for="imageUrl">Logo:</label>
                            <input
                                type="file"
                                name="imageFile"
                                onchange="previewFile()"
                                id="imageFileInput"
                            />
                            <input
                                class="hidden"
                                type="text"
                                name="imageUrl"
                                id="imageUrl"
                            />
                        </div>
                    </div>
                    <button type="submit">Submit</button>
                </form>
            </div>
        </div>

