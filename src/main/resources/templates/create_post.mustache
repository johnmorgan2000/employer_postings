        <div class="container">
            <div class="bcca-card">
                <form action="create" method="POST">
                    <div class="pb-2 create-inputs">
                        <div class="row">
                            <label class="col-2" for="name">Name: </label>
                            <input type="text" name="name" required />
                        </div>

